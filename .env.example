# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Metal Price API Configuration
METAL_API_KEY=your-metal-price-api-key-here
METAL_API_URL=https://api.metalpriceapi.com/v1/latest

# Firebase Configuration (Optional - can use firebase_options.dart instead)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# App Configuration
APP_NAME=Balaji Gold
APP_VERSION=1.0.0
DEBUG_MODE=true

# API Endpoints
API_BASE_URL=https://api.example.com
API_TIMEOUT=30

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_RATE_API=true
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=false

